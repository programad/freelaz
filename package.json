{
  "name": "brazilian-rate-calculator",
  "version": "1.0.0",
  "description": "Brazilian Freelancer Rate Calculator - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "preview": "npm run preview --workspace=apps/web",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "sync-env": "node scripts/sync-env.js",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "deploy:web": "npm run deploy --workspace=apps/web",
    "deploy:api": "npm run deploy --workspace=apps/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "freelancer",
    "rate-calculator",
    "brazil",
    "monorepo"
  ],
  "author": "Brazilian Rate Calculator Team",
  "license": "MIT"
}
